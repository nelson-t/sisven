* ANULA PEDIDO DE LA FACTURA AL CONTADO
PROCEDURE V_FAC_AP
******************
PARAMETER NRO_EMPR,NRO_PED

SELECT 0
USE V_PED_HD ORDER CORRE && EMPR+NRO

SEEK NRO_EMPR+NRO_PED

IF .NOT. EOF() .AND. LOCK()
   REPLACE HP_ESTADO WITH 'A', ;
           HP_OBS WITH '** ANULADO **', ;
           HP_IMPORTE WITH 0, ;
           HP_DSCTO_P WITH 0
ENDIF
USE

SELECT 0
USE V_PED_LN ORDER CORRE
SEEK NRO_EMPR+NRO_PED
DO WHILE .NOT. EOF() .AND. NRO_EMPR+NRO_PED=LP_EMPR+LP_NRO
 IF LOCK()
   DELETE
 ENDIF
 SKIP
ENDDO
USE
RETURN
