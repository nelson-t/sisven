******************
PROCEDURE V_DOCALM
******************
IF .NOT. V_USRAUT(USER,"DOCS_ALM",1)  
   RETURN
ENDIF

DO WHILE .T.
  OPCION=1
  DO V_FONDO.SPR
  DO V_DOCALM.SPR
  DO CASE
    CASE OPCION=1
      DO NE
    CASE OPCION=2
      DO V_MANING WITH 'A'   && DOC. INVENTARIO INICIAL
    CASE OPCION=3
      DO V_MANING WITH 'C'   && COMPRA LOCAL
    CASE OPCION=4
      DO V_MANING WITH 'B'   && IMPORTACION
    CASE OPCION=5
      DO V_MANING WITH 'D'   && DEVOLUCION
  ENDCASE
  IF OPCION=6
    EXIT
  ENDIF
ENDDO
RETURN

