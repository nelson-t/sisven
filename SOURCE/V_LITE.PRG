FUNCTION  V_LITE
****************
PARAMETER NUMERO

* SOLO HASTA 999 MILLONES
IF NUMERO>=1000000000
  RETURN "***"
ENDIF

LITE="" 

IF NUMERO>=1000000
   MILLONES=VAL(SUBSTR(TRANSFORM(NUMERO,'999999999.99'),1,3))
   NUMERO  =VAL(SUBSTR(TRANSFORM(NUMERO,'999999999.99'),4,9))
   IF MILLONES=1
       LITE='UN MILLON, '
   ELSE
       LITE=V_LITE(MILLONES)+'MILLONES, '
   ENDIF
   LITE=STRTRAN(LITE, '00/100 ', '')
ENDIF

SNUM=TRANSFORM(NUMERO,'9999999.99')

*CENTENAS DE MILES
IF NUMERO >= 100000     
DO CASE
CASE SUBSTR(SNUM,2,1)='1'
     IF SUBSTR(SNUM,3,1) <> '0' .OR. SUBSTR(SNUM,4,1) <> '0'
       LITE=LITE+'CIENTO '
     ELSE
       LITE=LITE+'CIEN MIL '
     ENDIF
CASE SUBSTR(SNUM,2,1)='2'
     IF SUBSTR(SNUM,3,1) <> '0' .OR. SUBSTR(SNUM,4,1) <> '0'
       LITE=LITE+'DOSCIENTOS '
     ELSE       
       LITE=LITE+'DOSCIENTOS MIL '
     ENDIF

CASE SUBSTR(SNUM,2,1)='3'
     IF SUBSTR(SNUM,3,1) <> '0' .OR. SUBSTR(SNUM,4,1) <> '0'
       LITE=LITE+'TRESCIENTOS '
     ELSE       
       LITE=LITE+'TRESCIENTOS MIL '
     ENDIF

CASE SUBSTR(SNUM,2,1)='4'
     IF SUBSTR(SNUM,3,1) <> '0' .OR. SUBSTR(SNUM,4,1) <> '0'
       LITE=LITE+'CUATROCIENTOS '
     ELSE       
       LITE=LITE+'CUATROCIENTOS MIL '
     ENDIF

CASE SUBSTR(SNUM,2,1)='5'
     IF SUBSTR(SNUM,3,1) <> '0' .OR. SUBSTR(SNUM,4,1) <> '0'
       LITE=LITE+'QUINIENTOS '
     ELSE       
       LITE=LITE+'QUINIENTOS MIL '
     ENDIF

CASE SUBSTR(SNUM,2,1)='6'
     IF SUBSTR(SNUM,3,1) <> '0' .OR. SUBSTR(SNUM,4,1) <> '0'
       LITE=LITE+'SEISCIENTOS '
     ELSE       
       LITE=LITE+'SEISCIENTOS MIL '
     ENDIF

CASE SUBSTR(SNUM,2,1)='7'
     IF SUBSTR(SNUM,3,1) <> '0' .OR. SUBSTR(SNUM,4,1) <> '0'
       LITE=LITE+'SETECIENTOS '
     ELSE       
       LITE=LITE+'STENCIENTOS MIL '
     ENDIF

CASE SUBSTR(SNUM,2,1)='8'
     IF SUBSTR(SNUM,3,1) <> '0' .OR. SUBSTR(SNUM,4,1) <> '0'
       LITE=LITE+'OCHOCIENTOS '
     ELSE       
       LITE=LITE+'OCHOCIENTOS MIL '
     ENDIF

CASE SUBSTR(SNUM,2,1)='9'
     IF SUBSTR(SNUM,3,1) <> '0' .OR. SUBSTR(SNUM,4,1) <> '0'
       LITE=LITE+'NOVECIENTOS '
     ELSE       
       LITE=LITE+'NOVECIENTOS MIL '
     ENDIF

ENDCASE     
ENDIF

*9999999.99
*DECENAS DE MILES
IF NUMERO >= 10000 .AND. SUBSTR(SNUM,3,1)<>'0'
   IF SUBSTR(SNUM,3,1)='1' .OR. SUBSTR(SNUM,3,1)='2'
      LITE=LITE+ALVEINTE(SUBSTR(SNUM,3,2),.F.)+'MIL '
   ELSE    
      IF SUBSTR(SNUM,4,1) <> '0'
        LITE=LITE+DECENA(SUBSTR(SNUM,3,1))+'Y '+ENTERO(SUBSTR(SNUM,4,1))+'MIL, '
      ELSE
        LITE=LITE+DECENA(SUBSTR(SNUM,3,1))+'MIL, '
      ENDIF 
   ENDIF 
ENDIF       

*9999999.99
*MILES       
IF NUMERO >= 1000 .and. SUBSTR(SNUM,4,1)<>'0' .AND. SUBSTR(SNUM,3,1)$'0 '
   IF SUBSTR(SNUM,4,1)='1'
     LITE=LITE+"UN MIL "
   ELSE
   	 LITE=LITE+ENTERO(SUBSTR(SNUM,4,1))+'MIL '
   ENDIF
ENDIF

DO CASE
CASE SUBSTR(SNUM,5,1)='1'
     IF SUBSTR(SNUM,6,1) <> '0' .OR. SUBSTR(SNUM,7,1) <> '0'
       LITE=LITE+'CIENTO '
     ELSE
       LITE=LITE+'CIEN '
     ENDIF
CASE SUBSTR(SNUM,5,1)='2'
     LITE=LITE+'DOSCIENTOS '
CASE SUBSTR(SNUM,5,1)='3'
     LITE=LITE+'TRESCIENTOS '
CASE SUBSTR(SNUM,5,1)='4'
     LITE=LITE+'CUATROCIENTOS '
CASE SUBSTR(SNUM,5,1)='5'
     LITE=LITE+'QUINIENTOS '
CASE SUBSTR(SNUM,5,1)='6'
     LITE=LITE+'SEISCIENTOS '
CASE SUBSTR(SNUM,5,1)='7'
     LITE=LITE+'SETECIENTOS '
CASE SUBSTR(SNUM,5,1)='8'
     LITE=LITE+'OCHOCIENTOS '
CASE SUBSTR(SNUM,5,1)='9'
     LITE=LITE+'NOVECIENTOS '
ENDCASE     

*9999999.99
IF SUBSTR(SNUM,6,1)='1' .OR. SUBSTR(SNUM,6,1)='2'
  LITE=LITE+ALVEINTE(SUBSTR(SNUM,6,2),.T.)
ELSE        
  IF .NOT. SUBSTR(SNUM,6,1)$'0 '        
    LITE=LITE+DECENA(SUBSTR(SNUM,6,1))+IIF(!SUBSTR(SNUM,7,1)='0','Y ','')   
  ENDIF
  LITE=LITE+ENTERO(SUBSTR(SNUM,7,1))
ENDIF

LITE=LITE+substr(snum,9,2)+'/100 '
RETURN LITE
    
FUNCTION ENTERO
***************
PARAMETER NENTERO

DO CASE
    CASE NENTERO='1'
     RETURN 'UNO '
    CASE NENTERO='2'
     RETURN 'DOS '
    CASE NENTERO='3'
     RETURN 'TRES '
    CASE NENTERO='4'
     RETURN 'CUATRO '
    CASE NENTERO='5'
     RETURN 'CINCO '
    CASE NENTERO='6'
     RETURN 'SEIS '
    CASE NENTERO='7'
     RETURN 'SIETE '
    CASE NENTERO='8'
     RETURN 'OCHO '
    CASE NENTERO='9'
     RETURN 'NUEVE '
ENDCASE    
RETURN ''       

FUNCTION ALVEINTE
*****************
PARAMETER NENTERO, ESDECENA

DO CASE
   CASE  NENTERO='10'
     RETURN 'DIEZ '
   CASE  NENTERO='11'
     RETURN 'ONCE '
   CASE  NENTERO='12'
     RETURN 'DOCE '
   CASE  NENTERO='13'
    RETURN 'TRECE '
   CASE  NENTERO='14'
     RETURN 'CATORCE '
   CASE  NENTERO='15'
     RETURN 'QUINCE '
   CASE  NENTERO='16'
     RETURN 'DIECISEIS '
   CASE  NENTERO='17'
     RETURN 'DIECISIETE '
   CASE  NENTERO='18'
     RETURN 'DIECIOCHO '
   CASE  NENTERO='19'
     RETURN 'DIECINUEVE '
   CASE  NENTERO='20'
     RETURN 'VEINTE '
   CASE  NENTERO='21'
     IF ESDECENA
       RETURN 'VEINTIUNO '
     ELSE
       RETURN 'VEINTIUN '
     ENDIF
   CASE  NENTERO='22'
     RETURN 'VEINTIDOS '
   CASE  NENTERO='23'
    RETURN 'VEINTITRES '
   CASE  NENTERO='24'
     RETURN 'VEITICUATRO '
   CASE  NENTERO='25'
     RETURN 'VEINTICINCO '
   CASE  NENTERO='26'
     RETURN 'VEINTISEIS '
   CASE  NENTERO='27'
     RETURN 'VEINTISIETE '
   CASE  NENTERO='28'
     RETURN 'VEINTIOCHO '
   CASE  NENTERO='29'
     RETURN 'VEINTINUEVE '
ENDCASE    
  
RETURN '*'       

FUNCTION DECENA
***************
