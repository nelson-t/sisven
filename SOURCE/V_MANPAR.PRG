CLEAR
CLOSE DATA
SET DELE  ON
SET TALK  OFF
SET EXCLU OFF
SET EXACT OFF

DO V_INIMAN WITH "PARAMETROS",2

SELECT 1
USE V_PARAM ORDER PARAM
SET FILTER TO PA_EMPR=EMPRESA

DEFINE WINDOW  MOD_LINEAS FROM 0,1 TO 21,78

ON KEY LABEL F10 KEYBOARD CHR(23)
ON KEY LABEL F4  KEYBOARD CHR(14)
ON KEY LABEL F8  KEYBOARD CHR(20)

@ 22,5 to 24,75 DOUBLE

@ 23,10 SAY '[F4]-ADICIONA REGISTRO  [F8]-BORRA REGISTRO  [F10]-SALIR' COLOR GR+/B

BROW FIELDS PA_EMPR:H='EMPR.',  PA_PARAM:H='PARAMETRO', PA_DSCR:H='DESCRIPCION':25, PA_VALUE:H='VALOR':25 ; 
     WINDOW MOD_LINEAS TITLE 'TABLA DE PARAMETROS'

CLOSE DATA
RELEASE WINDOW MOD_LINEAS
DO V_ONKEYS

RETURN     