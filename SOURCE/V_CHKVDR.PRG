FUNCTION V_CHKVDR
*****************
PARAMETER CODIGO, NOMVAR
*CODIGO=CODIGO DEL VENDEDOR
*NOMVAR=NOMBRE DE LA VARIABLE DEL VENDEDOR

CERRARDBF=.F.
CURRENT=SELECT()
IF SELECT("V_VENDOR")=0
  CERRARDBF=.T.
  SELECT 0
  USE V_VENDOR ORDER CODIGO
ENDIF

SELECT V_VENDOR
SEEK EMPRESA+CODIGO
IF FOUND()
  ESVALIDO=.T.
  IF ''<>NOMVAR
    STORE V_VENDOR.VE_NOMBRE TO (NOMVAR) 
  ENDIF
ELSE
  ESVALIDO=.F.
ENDIF    

IF CERRARDBF
  USE
ENDIF

SELECT (CURRENT)

RETURN ESVALIDO