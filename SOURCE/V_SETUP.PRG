PROCEDURE V_SETUP
*****************
PARAMETER P_CARATULA, P_MENSAJE

IF ''=P_MENSAJE
  MENSAJE='ESPERE UN MOMENTO POR FAVOR !!'
ELSE
  MENSAJE=P_MENSAJE
ENDIF

SET RESOURCE TO VENTAS
SET COLOR SET TO VENTAS

SET BLINK OFF
SET CLOCK ON
SET CONFIRM ON
SET EXCLU OFF
SET DATE TO DMY
SET DELE ON
SET TALK OFF
SET SAFETY OFF
SET ESCAPE OFF
SET EXACT OFF
SET CURSOR OFF

CLEAR
DO (P_CARATULA)
@ 23,0  
WAIT '' TIMEOUT 1
SET CURSOR ON
CLEAR

RETURN
