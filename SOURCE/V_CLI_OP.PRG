******************
PROCEDURE V_CLI_OP
******************
*MENU DE OPCIONES
HIDE MENU M_CLIENT
ON KEY LABEL PGUP
ON KEY LABEL PGDN
SET DATE FRENCH
OPCION=1
DO V_CLI_O.SPR
DO CASE
  CASE LASTKEY()<>27 .AND. OPCION=1
    DO V_ESTCLI WITH 'N' 
  CASE LASTKEY()<>27 .AND. OPCION=2
    DO V_ESTCLI WITH 'S'
  CASE LASTKEY()<>27 .AND. OPCION=3
    DO CL_IMPRE
  CASE LASTKEY()<>27 .AND. OPCION=4
    DO V_ESTCLO WITH 'N' 
  CASE LASTKEY()<>27 .AND. OPCION=5
    DO V_ESTCLO WITH 'S'
  CASE LASTKEY()<>27 .AND.  OPCION=6
    WREC=RECNO()
    archivo="..\TMP\"+SYS(3)+".TXT" 
    REPORT FORM V_CLFICH NEXT 1 TO FILE (archivo)
    ! COPY &archivo lpt1:
    CLEAR
    WAIT "ENVIANDO FICHA A LA IMPRESORA.." WINDOW TIMEOUT 2
    DELETE FILE (archivo)
    GO WREC
ENDCASE
ON KEY LABEL PGUP DO CAMBIA_P1
ON KEY LABEL PGDN DO CAMBIA_P2
DO CL_VER
RETURN

