FUNCTION V_ENCRYP
******************
PARAMETER VALOR, ENDECRYP   &&E=ENCRIPTAR D=DECRIPTAR
**OJO VALIDAR CHARS ANTE DE EJECUTAR, PUEDE FALLAR PARA CARACTERES ESPECIALES 

RESUL=""

BASE=80

FOR I=1 to LEN(VALOR)
  MICHAR=SUBSTR(VALOR,I,1)
  RESUL=RESUL+ CHR(ASC(MICHAR)+IIF(ENDECRYP='E', BASE, -BASE))
  BASE=BASE-1
NEXT

RETURN RESUL

