PROCEDURE V_MANTBL
******************
CLOSE DATA
SET DELE ON
SET TALK OFF
SET EXCLU OFF
SET EXACT OFF
SET DATE TO DMY

SELECT 1
USE V_TABLES ORDER DBF

CLEAR

DEFINE WINDOW  MOD_TC  FROM 2,2 TO 20,78
DEFINE WINDOW  VER_TAB FROM 3,3 TO 19,77

ON KEY LABEL F10 KEYBOARD CHR(23)

ON KEY LABEL ALT+HOME GO TOP
ON KEY LABEL ALT+END  GO BOTT
ON KEY LABEL CTRL+ENTER DO VER_TABLA

@ 21,2 to 24,78 DOUBLE
@ 22,5 SAY '                             [F10]-SALIR                               ' COLOR GR+/B
@ 23,4 SAY 'Ctrl+ENTER-VISUALIZA TABLA   Alt+HOME-IR A INICIO   Alt+END-IR AL FINAL' 
@ 0,0 SAY DATE()

DO WHILE LASTKEY()<>23 AND LASTKEY()<>27
  BROWSE NOAPPEND NODELETE NOEDIT WINDOW MOD_TC TITLE "TABLAS DEL SISTEMA - SOLO VISUALIZACION" 
ENDDO

CLOSE DATA
RELEASE WINDOW MOD_TC
RELEASE WINDOW VER_TAB

ON KEY LABEL F10 
ON KEY LABEL ALT+HOME 
ON KEY LABEL ALT+END 

CLEAR
RETURN     

PROCEDURE VER_TABLA
*******************
SELECT 2
ON ERROR USE (V_TABLES.TB_DBF) 

USE (V_TABLES.TB_DBF) ORDER 1
ON ERROR
@ 22,5 SAY '                             [F10]-SALIR                               ' COLOR GR+/B
@ 23,4 SAY '             Alt+HOME-IR A INICIO   Alt+END-IR AL FINAL                ' 

BROWSE NOAPPEND NODELETE NOEDIT WINDOW VER_TAB TITLE "VISUALIZACION DE "+(V_TABLES.TB_DBF)

USE
SELECT 1

@ 22,5 SAY '                             [F10]-SALIR                               ' COLOR GR+/B
@ 23,4 SAY 'Ctrl+ENTER-VISUALIZA TABLA   Alt+HOME-IR A INICIO   Alt+END-IR AL FINAL' 

Return


